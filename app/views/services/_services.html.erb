<table class="table table-bordered">
	<thead>
		<tr>
			<th>Ordem</th>
			<th>Data</th>
			<th>Cliente</th>
			<th>Telefone</th>
			<th>Valor</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		<% @services.each do |service| %>
		<tr>
			<td><%= service.id %></td>
			<td><%= service.created_at.strftime("%d/%m/%Y") %></td>
			<td><%= service.client %></td>
			<td><%= service.fone %></td>
			<td><%= service.value %></td>
			<td><%= service.status %></td>
			<td class="button"><%= link_to "Exibir", service, class: "btn btn-primary" %></td>	
		</tr>
		<% end %>
	</tbody>
</table>